<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="?attr/xui_config_content_spacing_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_connect"
                style="@style/Button.Blue"
                android:layout_weight="1"
                android:text="连接" />

            <Button
                android:id="@+id/btn_disconnect"
                style="@style/Button.Blue"
                android:layout_marginStart="?attr/xui_config_content_spacing_horizontal"
                android:layout_weight="1"
                android:text="断开" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/xui_config_content_spacing_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_subscribe"
                style="@style/Button.Blue"
                android:layout_weight="1"
                android:text="订阅" />

            <Button
                android:id="@+id/btn_publish"
                style="@style/Button.Blue"
                android:layout_marginStart="?attr/xui_config_content_spacing_horizontal"
                android:layout_weight="1"
                android:text="发布" />

        </LinearLayout>

        <TextView
            style="@style/TextStyle.Title"
            android:layout_marginTop="?attr/xui_config_content_spacing_horizontal"
            android:text="已订阅主题" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/xui_config_content_spacing_horizontal"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/tv_log_"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/xui_config_color_gray_8"
                android:lineSpacingExtra="10dp"
                android:padding="5dp"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textColor="@color/xui_config_color_white" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>